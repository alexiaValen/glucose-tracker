{
  "expo": {
    "name": "GraceFlow",
    "slug": "graceflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3D5540"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.graceflow.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "processing",
          "fetch",
          "processing"
        ],
        "NSHealthShareUsageDescription": "GraceFlow needs access to read your blood glucose data from Apple Health to help your coach track your progress.",
        "NSHealthUpdateUsageDescription": "GraceFlow needs access to save your blood glucose readings to Apple Health for a complete health record.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3D5540"
      },
      "package": "com.graceflow.app"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6f4a2e56-93c6-4ba8-9f83-5966ee4220e4"
      }
    }
  }
}
