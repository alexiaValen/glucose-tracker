# ===== BACKEND ENVIRONMENT VARIABLES =====
# File: backend/.env

# ============================================
# DATABASE (Supabase PostgreSQL)

DATABASE_URL=

# ============================================
# Username should always be "postgres" for Supabase

# ============================================
# SUPABASE
# ============================================
# Must include https://
SUPABASE_URL=

# This is your ANON key (public, safe to use)
SUPABASE_ANON_KEY=

# SERVICE_ROLE_KEY - Get from Supabase Dashboard > Settings > API > service_role key
# This is different from anon key! Go to your Supabase project to find it.
SUPABASE_SERVICE_KEY=

# ============================================
# JWT SECRETS
# ============================================
JWT_SECRET=
JWT_REFRESH_SECRET=
# ============================================
# SERVER
# ============================================
PORT=
NODE_ENV=

# ============================================
# CORS (Optional)
# ============================================
ALLOWED_ORIGINS=